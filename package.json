{
  "name": "tpa-payment-portal",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently \"npm:css:watch\" \"nodemon src/app.js\"",
    "css:build": "tailwindcss -i ./src/tailwind.css -o ./public/css/output.css --minify",
    "css:watch": "tailwindcss -i ./src/tailwind.css -o ./public/css/output.css --watch",
    "start": "node src/app.js",
    "db:seed:admin": "node scripts/seed_admin.js"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^9.4.0",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.9",
    "express": "^4.19.2",
    "express-session": "^1.17.3",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1"
  },
  "engines": {
    "node": ">=18"
  }
}